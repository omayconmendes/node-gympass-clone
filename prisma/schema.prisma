
generator client {
  provider = "prisma-client"
  output   = "../prisma/generated"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(uuid())
  nome String
  email String @unique
  password_hash String
  created_at DateTime @default(now())

  @@map("users")
}

model ChckIn {
  id String @id @default(uuid())
  created_at DateTime @default(now())
  validated_at DateTime?

  @@map("check_ins")
}

model Gym {
  id String @id @default(uuid())
  title String
  description String?
  phone String?
  latitude Decimal
  longitude Decimal

  @@map("gyms")
}
